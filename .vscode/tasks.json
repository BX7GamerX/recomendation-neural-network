{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20", // C++20
                "-I${workspaceFolder}/include",
                //"-I/home/him/Desktop/gainchain/repos/neural network/include",
                //"${workspaceFolder}/src/json.hpp",
                //"${workspaceFolder}/src/json_fwd.hpp",
                //"${workspaceFolder}/src/record_keeper.cpp",
                "${workspaceFolder}/src/NeuralNetwork.cpp",
                "${workspaceFolder}/src/${fileBasename}", // Use src directory for source files
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}" // Save executable to bin
            ],
            "options": {
                "cwd": "${workspaceFolder}/src" // Set the working directory to src
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
